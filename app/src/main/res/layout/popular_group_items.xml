<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="16dp"
    android:background="@color/group_color">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/rsz_lily_banse_365344_unsplash" />

    <TextView
        android:id="@+id/pop_groups_title"
        android:layout_width="255dp"
        android:layout_height="49dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="Group title"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/pop_groups_desc"
        android:layout_width="255dp"
        android:layout_height="49dp"
        android:layout_below="@+id/pop_groups_title"
        android:layout_alignStart="@+id/pop_groups_title"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="2dp"
        android:text="description"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/pop_groups_foods"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pop_groups_title"
        android:layout_alignStart="@+id/pop_groups_title"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:text="foods"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/pop_groups_location"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:layout_below="@+id/pop_groups_title"
        android:layout_alignStart="@+id/pop_groups_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:text="location"
        android:textSize="18dp" />

</RelativeLayout>